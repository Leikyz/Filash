        <Label x:Name="serverName" Style="{StaticResource CustomFont}" Content="2.62" HorizontalAlignment="Left" 
               Margin="139,6,0,0" VerticalAlignment="Top" Height="46" Width="84" RenderTransformOrigin="2.528,0.767" FontFamily="Segoe UI Black" FontSize="30 " FontWeight="Normal" Foreground="#ffdd8d" FontStyle="Italic"/>

        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="76" Margin="74,334,0,0" VerticalAlignment="Top" Width="492" Background="#FF191919" Foreground="#FF333333" BorderBrush="Black"/>
        <Label x:Name="dlPercent" Content="0%" HorizontalAlignment="Left" Margin="571,357,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="20" Height="30" Width="56"/>
        <Button x:Name="downloadButton" FontFamily="Milky Nice Clean" Background="#FF151515" BorderThickness="0" BorderBrush="Transparent" FontSize="22" FontWeight="Normal" HorizontalAlignment="Left" Margin="77,337,0,0" VerticalAlignment="Top" Height="70" Width="486" Click="DownloadButton_Click" Content="Télécharger Dofus" Foreground="White" Cursor="Hand">

        </Button>
        <Button x:Name="btnReload" Click="btnPar_Copy_Click" Margin="320,416,600,78" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" >
            <Image x:Name="gear1" Style="{StaticResource Spinner}"  Source="C:\Users\Matéo\source\repos\Filash\Resources/repair.png" Visibility="Visible" Stretch="Fill" Height="28" Width="30" />
        </Button>
        <Button x:Name="btnReload_Copy" Click="btnPar_Copy_Click" Margin="440,416,480,78" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" >
            <Image x:Name="gear2" Style="{StaticResource Spinner}"  Source="C:\Users\Matéo\source\repos\Filash\Resources/news.png" Visibility="Visible" Stretch="Fill" Height="28" Width="30" />
        </Button>

    </Grid>
</Window>